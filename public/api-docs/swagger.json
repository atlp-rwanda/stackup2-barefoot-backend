    "/trips/search": {
      "get": {
        "summary": "Searches a user(requester)'s trip requests",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "field",
            "in": "query",
            "description": "a preferred field/column to perform search against",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SearchTripRequests"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "a term to search for on the selected field",
